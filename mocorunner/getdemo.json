[
  {
    "description":"模拟一个无参数的get请求",
    "request":{
      "uri":"/getdemo"
    },
    "response":{
      "text":"response-这是一个没有参数的get请求!"
    }
  },
  {
    "description":"模拟一个带参数的get请求,注意请求地址中必须传入?name=lunimei&age=19 这个响应才会成功",
    "request":{
      "uri":"/getDemoWithParam",
      "method":"get",
      "queries":{
        "name":"lunimei",
        "age":"19"
      }
    },
    "response":{
      "text":" response-这是一个有参数的get请求"
    }
  },
  {
    "description":"模拟一个带cookies信息的get请求",
    "request":{
        "uri":"/getDemoWithCookies",
        "method":"get",
        "cookies":{
            "status":"12345"
        }
    },
    "response":{
        "json":{
            "status":12345,
            "desc":"带cookies的get请求访问成功"
        }
    }
  },
  {
    "description":"这个请求将主动返回cookies信息",
    "request":{
        "uri":"/getCookies",
        "method":"get"
    },
    "response":{
        "cookies":[
            {"name":"zhangsan"},
            {"status":"12345"},
            {"age":"01122"}
        ],
        "text":"Congruatulations,success!"
    }
  }

]